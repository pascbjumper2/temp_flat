<div class="maindiv">

  <p class="bigtitle">Blog</p>
  <hr/>
  <% @articles.each do |article| %>
  <div class="panel panel-default" style="overflow: hidden;">
    <div class="panel-heading" style="height:40px; background-color:#fff;">
      <h3 class="panel-title pull-left titletext" style="color:#000;"><%= article.title %></h3>
      <h5 class="panel-title date pull-right"><%= article.created_at.strftime("%Y-%m-%d") %></h5>
    </div>
    <div class="panel-body">
      <%= article.body.html_safe %>
    </div>
  </div>
  <% end %>

</div>









